/* pages/sign/sign.wxss */
.container {
  background-color: #fff;
  min-height: 100%;
  padding-bottom: 100rpx;
}
.ces-logo{
  width: 100%;
  height: 100rpx;
}
.meeting-title{
  position:absolute;
  text-align:center;
  width:100%;
  height:100rpx;
  line-height:100rpx;
  color:#fff;
  font-size:36rpx;
  top:0;
  left:0;
}
.sign-content{
  flex: 1;
}
.sign-img{
  width:100%;
  height:85vh;
  position:absolute;
}
.sign-icon{
  position:absolute;
  z-index:10;
  width:100%;
  height:45%;
  margin-top:100rpx;
  margin-left:-9px;
display:block;
}
.sign-text{
  position:absolute;
  z-index:20;
  width:100%;
  height:400rpx;
  line-height:400rpx;
  top:46%;
  transform:translateY(-50%);
  text-align:center;
  color:#fff;
  font-size:60rpx;
}
.sign-text.spectial{
  font-size:38rpx;
}
.footer-box{
  height:120rpx;
  display:flex;
  width:100%;
  position:fixed;
  bottom:0;
  left:0;
  border-top: 1px solid #b79f9f;
}
.menu-bg{
  position: absolute;
  width: 100%;
  height:100%;
}
.active-img{
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  z-index:-1;
  width:100%;
}
.footer-nav.active{
  position: relative;
}
.footer-nav.active text{
  color: #fff;
}
.nav-guide{
  width:50rpx;
  height:50rpx;
  display:block;
  left:50%;
  margin-left:-25rpx;
  position:relative;

}
.footer-nav text{
  display:block;
  flex:1;
  text-align:center;
  color: #d63700;
  margin-top:10rpx;
}
.footer-nav{
  height:120rpx;
  flex:1;
  text-align:center;
  font-size:29rpx;

  z-index:10;
  padding-top:15rpx;
}
.footer-nav:not(:last-child){
  border-right:1px solid #fff;
}