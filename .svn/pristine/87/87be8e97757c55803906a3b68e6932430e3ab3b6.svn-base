/**login.wxss**/
.container {
  align-items: stretch;
  padding: 0;
  height: 100%;
  overflow: hidden;
}
.content{
  flex: 1;
  width: 100%;
  height: 100%;
  padding-bottom: 450rpx;
  transform: translate3d(0,450rpx,0); 
}
/* @keyframes rise{
  0% {opacity: 0;transform: translate3d(0,100%,0);}
  50% {opacity: 1;}
  100% {opacity: 1;transform: translate3d(0,450rpx,0);}
} */
.logoTitle{
  font-size:40px;
  text-align:center;
  position:absolute;
  top:2%;
  width:700rpx;
  left:50%;
  margin-left:-350rpx;
  color:#fff;

}
.title{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.logo{
  width:300rpx;
  height:120rpx;
}
.logo_title{
  width:88%;
  height:185rpx;
  margin-top:30px
}
form {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
}
.border_img{
  width: 100%;
  height: 3rpx;
}
.user{
  width:80rpx;
  height:80rpx;
}
.input-content{
  display:flex;
  justify-content:space-around;
  align-items:center;
  width: 100%;
  padding-bottom:6rpx;
}
.input-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 20rpx;
  margin: 20rpx 6%;
  border-radius: 5px;
  /* border: 2px solid #f4f4f4; */
  transition: all .25s ease-in-out;
}
.input-label {
  color: #888;
  font-size: 13pt;
  height: 25rpx;
  line-height: 25rpx;
  padding: 0 25rpx;
  border-right: 1px solid #d8d8d8; 
}
.input-group input,
.input-group picker {
  flex: 1;
  font-size: 13pt;
  min-height: 52rpx;
  height: 52rpx;
  line-height: 52rpx;
  padding: 0 25rpx;
}
.input-placeholder,
.input-group picker.placeholder {
  color: #ccc;
}
.btn-area {
  width:85%;
  left:50%;
  transform:translateX(-50%);
  position:relative;
  margin-top:50rpx;
}
.theme{
  text-align:center;
  margin-top:60rpx;

}
.theme-img{
  width: 75%;
  height: 60rpx;
}
.subCls:active {
  opacity: .8;
}
.box {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  width: 80%;
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 0 50px rgba(22,22,22,.35);
  transform: translate3d(0,-400rpx,0);
}
.box-hd {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  border-bottom: 1px solid #eee;
}
.box-title {
  font-size: 13pt;
}
.box-close {
  position: absolute;
  right: 20rpx;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx;
}
.box-bd {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 15rpx 40rpx 30rpx;
}
button[disabled][type="primary"]{
  background-color: #f8bb00;
  border-radius: 0;
  color: #fff;
}
input{
  color: #fff;
}