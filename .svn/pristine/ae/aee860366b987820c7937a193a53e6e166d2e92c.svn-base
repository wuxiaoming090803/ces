                      <text class="td-content">议题:项目管理中心</text>
                      <text class="td-content">主讲人:张元利</text>
                    </view>
                </view>
                <view class="tr">
                    <view class="td">15:00-16:00</view>
                    <view class="td">讨论交流</view>
                </view>
                <view class="tr">
