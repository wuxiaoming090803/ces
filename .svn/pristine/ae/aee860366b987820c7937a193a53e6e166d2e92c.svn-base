                </view>
                <view class="tr">
                    <view class="td">12:30</view>
                    <view class="td">午餐</view>
                </view>
              </view>
          </view>
          <view class="date-detail pm day2-spectial">
              <view class="tableContent">            
                <view class="tr">
                    <view class="td">下午</view>
                    <view class="td">统筹安排</view>
                </view>
              </view>
          </view>
      </view>
      </scroll-view>
  </view>
