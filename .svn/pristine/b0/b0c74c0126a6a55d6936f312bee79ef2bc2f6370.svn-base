/* pages/items/items.wxss */
page{
  overflow:auto;
}

.container {
  background-color: #fff;
  min-height: 100%;
  padding-bottom: 20rpx;
}
.ces-logo{
  width: 100%;
  height: 100rpx;
}
.meeting-title{
  position:absolute;
  text-align:center;
  width:100%;
  height:100rpx;
  line-height:100rpx;
  color:#fff;
  font-size:36rpx;
  top: 0;
  left: 0;
}
.dinner-content{
  display:flex;
  flex-direction:column;
  justify-content:space-around;
  align-items:center;
  text-align:center;
}
.dinner-scroll{
  height: 1000rpx;
}
.user-info{
  position: relative;
  margin-top:30rpx;
  width: 100%;
}
.count-content{
  overflow: auto;
  margin-top: 20rpx;
}
.item-img{
  height: 150rpx;
  width: 75%;
}
.user-content{
  position:absolute;
  top:0;
  text-align:center;
  width:100%;
  height: 150rpx;
}
.user-content text{
  display:block;
  height:80rpx;
  line-height:80rpx;
  color:#fff;
  font-size:45rpx;
}
.user-content text:last-child{
  font-size: 40rpx;
  height:55rpx;
  line-height:55rpx;
}
