.issue-item{
  font-size:35rpx;
  width:90%;
  margin:0 auto;
  color: #f04b12;
  border-bottom:1px solid #f04b12;
}
.canvas{
  margin:0 auto;

}
.hover{
  opacity: 0.8
}
.footer-box{
  height:120rpx;
  display:flex;
  width:100%;
  position:fixed;
  bottom:0;
  left:0;
  border-top: 1px solid #b79f9f;
}
.menu-bg{
  position: absolute;
  width: 100%;
  height:100%;
}
.active-img{
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  z-index:-1;
  width:100%;
}
.footer-nav.active{
  position: relative;
}
.footer-nav.active text{
  color: #fff;
}
.nav-guide{
  width:50rpx;
  height:50rpx;
  display:block;
  left:50%;
  margin-left:-25rpx;
  position:relative;

}
.footer-nav text{
  display:block;
  flex:1;
  text-align:center;
  color: #807b75;
  margin-top:10rpx;
}
.footer-nav{
  height:120rpx;
  flex:1;
  text-align:center;
  font-size:29rpx;
  z-index:10;
  padding-top:15rpx;
}
  .count-vote{
  width:100%;
  text-align:center;
  font-size:60rpx;
  padding-top:130rpx;
  height:300rpx;
  position:absolute;
  top:50%;
  transform:translateY(-50%);
  color:#f36529;

}
.footer-nav:not(:last-child){
  border-right:1px solid #fff;
}