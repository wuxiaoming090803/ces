/* pages/vote/vote.wxss */
.container {
  background-color: #F2f2f2;
  min-height: 100%;
  padding-bottom: 100rpx;
}
.user-items{
  display:flex;
flex-wrap:wrap;
width:100%;
justify-content:center;
align-items:stretch;
padding:20rpx;
height:200rpx;
}
.user-time{
  height:30px;
  font-size: 20px;
  line-height: 30px;
  width: 90%;
  margin-top: 20px;
  margin-left:20px;
  border-bottom:1px solid #ddd;

}
.user-info{
  display:flex;
justify-content:center;
align-items:stretch;
width:340rpx;
}
.user-photo{
  width: 100px;
  height: 100px;
}
.user-detail{
 flex:1;
text-align:center;
display:flex;
flex-direction:column;
justify-content:center;
font-size:15px;

}
.user-name{
  display: block;
}
.footer-box{
  height:100rpx;
  display:flex;
  width:100%;
  position:fixed;
  bottom:0;
  left:0;
  box-shadow:0 0 8rpx 0;
}
.footer-nav{
  height:100rpx;
  flex:1;
  line-height:100rpx;
  text-align:center;
  font-size:35rpx;
  background-color:#7acfa6;
  color:#fff;
  border-left:1px solid #ddd;
}