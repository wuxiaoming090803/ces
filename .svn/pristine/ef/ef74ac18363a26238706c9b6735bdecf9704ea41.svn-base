/* pages/items/items.wxss */
.container {
  background-color: #fff;
  min-height: 100%;

}
.ces-logo{
  width: 100%;
  height: 100rpx;
  display:block;
  z-index:10;
}
.meeting-title{
  position:absolute;
  text-align:center;
  width:100%;
  height:100rpx;
  line-height:100rpx;
  color:#fff;
  font-size:36rpx;
  top: 0;
  left: 0;
  z-index:20;
}
.meeting-bg{
  position:absolute;
  width:100%;
  height:100%;
}
.dinner-content{
  display:flex;
  flex-direction:column;
  justify-content:space-around;
  align-items:center;
  text-align:center;
  overflow:auto;
  z-index: 1;
  position:relative;
}
.dinner-scroll{
  height: 1000rpx;
}
.user-info{
  position: relative;
  margin-top:30rpx;
  width: 100%;

}
.item-img{
  height: 150rpx;
  width: 75%;
}
.user-content{
  position:absolute;
  top:0;
  text-align:center;
  width:100%;
  height: 150rpx;
}
.user-content text{
  display:block;
  height:80rpx;
  line-height:80rpx;
  color:#fff;
  font-size:45rpx;
}
.user-content text:last-child{
  font-size: 40rpx;
  height:55rpx;
  line-height:55rpx;
}
.user-items{
  display:flex;
  flex-direction:column;
  margin-top:20rpx;
  text-align:left;
}
.user-topic{
  height:70rpx;
  line-height:70rpx;
  font-size:35rpx;
  width:90%;
  margin:0 auto;
  border-bottom:1px solid #f04b12;
  color:#f04b12;
}
radio-group{
  width:92%;
  margin:0 auto;
  margin-top:25rpx;
  display: flex;
  justify-content:flex-start;
  flex-wrap: wrap
}
.radio-group{
  display:flex;
  width:28%;
  height: 80rpx;
  align-items:center;
  font-size:35rpx;
  color:black;
  border:1px solid #f07f55;
  border-radius:15rpx;
  padding-left:20rpx;
  margin-right: 10rpx;
  margin-bottom: 20rpx;
}
/* radio-group .radio-group:last-child{
  margin-right: 0;
} */
.radio-group:last-child{
  flex: 1;
}
.vote-text{
  display: none;
}
.vote-text.isShow{
  display: block;
}
.suggest-text{
  border:1px solid #f07f55;
  width:90%;
  margin:0 auto;
  border-radius:15rpx;
  height:180rpx;
  font-size: 35rpx;
  padding-top: 15rpx;
}
.btn-area {
  width:85%;
  left:50%;
  transform:translateX(-50%);
  position:relative;
  margin-top:20rpx;
  margin-bottom:30rpx;
}
button[type="primary"]{
  background-color: #f8bb00;
  border-radius: 0;
  color: #fff;
}
.hover{
  opacity: 0.8
}
.footer-box{
  height:120rpx;
  display:flex;
  width:100%;
  position:fixed;
  bottom:0;
  left:0;
  border-top: 1px solid #b79f9f;
}
.menu-bg{
  position: absolute;
  width: 100%;
  height:100%;
}
.active-img{
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  z-index:-1;
  width:100%;
}
.footer-nav.active{
  position: relative;
}
.footer-nav.active text{
  color: #fff;
}
.nav-guide{
  width:50rpx;
  height:50rpx;
  display:block;
  left:50%;
  margin-left:-25rpx;
  position:relative;

}
.footer-nav text{
  display:block;
  flex:1;
  text-align:center;
  color: #807b75;
  margin-top:10rpx;
}
.footer-nav{
  height:120rpx;
  flex:1;
  text-align:center;
  font-size:29rpx;
  z-index:10;
  padding-top:15rpx;
}
.footer-nav:not(:last-child){
  border-right:1px solid #fff;
}